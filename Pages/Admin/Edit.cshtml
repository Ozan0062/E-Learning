@page
@model EditModel
@{
}

<h2 class="display-6 mb-3 text-center">Ændre Underviser</h2>

<form method="post">
	<div class="form-group mb-3" hidden>
		<label asp-for="@Model.Data.Id" class="control-label"></label>
		<input asp-for="@Model.Data.Id" class="form-control" readonly="@(true)" />
	</div>
	<div class="form-group mb-3">
		<label asp-for="@Model.Data.Name" class="control-label">Navn</label>
		<input asp-for="@Model.Data.Name" class="form-control" />
		<span asp-validation-for="@Model.Data.Name" class="text-danger"></span>
	</div>
	<div class="form-group mb-3">
		<label asp-for="@Model.Data.Email" class="control-label"></label>
		<input asp-for="@Model.Data.Email" class="form-control" />
		<span asp-validation-for="@Model.Data.Email" class="text-danger"></span>
	</div>

	<div class="form-group mb-3">
		<label asp-for="@Model.Data.Password" class="control-label">Adgangskode</label>
		<input asp-for="@Model.Data.Password" class="form-control" />
		<span asp-validation-for="@Model.Data.Password" class="text-danger"></span>
	</div>

	<div class="form-group mb-3">
		<label asp-for="@Model.Data.PhoneNumber" class="control-label">Telefonnummer</label>
		<input asp-for="@Model.Data.PhoneNumber" class="form-control" />
		<span asp-validation-for="@Model.Data.PhoneNumber" class="text-danger"></span>
	</div>

	<p>
		<div class="form-group mb-3">
			<input type="submit" style="background-color:#fff387" value="Opdater" class="btn btn-outline-basic" />
		</div>
	</p>
</form>
