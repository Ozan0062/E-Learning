@page
@model E_Learning.Pages.Courses.CreateModel
@{
}

<h1 class="display-3 mb-5">Opret kursus</h1>

<form method="post">
	<div class="form-group mb-3">
		<label asp-for="@Model.Data.Name" class="control-label"></label>
		<input asp-for="@Model.Data.Name" class="form-control" />
		<span asp-validation-for="@Model.Data.Name" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="@Model.Data.Description" class="control-label"></label>
		<input asp-for="@Model.Data.Description" class="form-control"/>
		<span asp-validation-for="@Model.Data.Description" class="text-danger"></span>
	</div>
		<div class="form-group">
			<label asp-for="@Model.Data.EducationId" class="control-label"></label>
			<select asp-for="@Model.Data.EducationId" asp-items="@Model.EducationList" class="form-control"></select>
			<span asp-validation-for="@Model.Data.EducationId" class="text-danger"></span>
	    </div>

	<p>
		<div class="form-group mb-3">
			<input type="submit" value="Opret" class="btn btn-outline-basic" style="background-color:#fff387" />
		</div>
	</p>
</form>