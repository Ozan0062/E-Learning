@page
@model E_Learning.Pages.Courses.AllModel
@{
}

<h1 class="display-6 mb-3 text-center">Kursusoversigt</h1>

<div class="container">
    <div class="row">
        @foreach (var course in Model.Data)
        {
            <div class="col-md-4 p-3">
                <div class="card shadow" style="width: 18rem;">
                    <div class="card-body d-flex flex-column">
                        <h3 class="card-title">@course.Name</h3>
                        <div class="d-flex justify-content-between">
                            <h5>@(course.Description)</h5>
                            <div>
                                @if (AdminLogInModel.LoggedInAdmin != null) 
                                {
                                    <a class="btn btn-outline-primary btn-sm" type="button" style="background-color:#fff387" title="Edit" asp-page="Edit" asp-route-id="@course.Id"><i class="fa fa-edit"></i></a>
                                    <a class="btn btn-outline-danger btn-sm" type="button" style="background-color:#fff387" title="Delete" asp-page="Delete" asp-route-id="@course.Id"><i class="fa fa-trash"></i></a>

                                }
                                @if (LogInPageModel.LoggedInUser != null) 
                                {
                                    <form method="post" asp-page-handler="AddToFavorites" asp-route-courseId="@course.Id">
                                        <button class="btn btn-outline-info btn-sm" type="submit" style="background-color:#fff387" title="Favorite">
                                            <i class="fa fa-star"></i> Favorit
                                        </button>
                                    </form>
                                }

                                @if (InstructorLogInModel.LoggedInInstructor != null)
                                {
                                    <a class="btn btn-outline-primary btn-sm" type="button" style="background-color:#fff387" title="Edit" asp-page="Edit" asp-route-id="@course.Id"><i class="fa fa-edit"></i></a>

                                }


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>

@if (AdminLogInModel.LoggedInAdmin != null)
{
    <p>
        <a class="btn btn-outline-basic mt-3" style="background-color:#fff387" asp-page="Create"> Opret nyt kursus </a>
    </p>

}
