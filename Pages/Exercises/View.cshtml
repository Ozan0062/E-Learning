<form method="post" enctype="multipart/form-data">
	<div class="form-group mb-3">
		<label asp-for="@Model.Data.Name" class="control-label">Navn</label>
		<input asp-for="@Model.Data.Name" class="form-control" readonly="@(true)" />
		<span asp-validation-for="@Model.Data.Name" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="@Model.Data.Description" class="control-label">Beskrivelse</label>
		<input asp-for="@Model.Data.Description" class="form-control" readonly="@(true)" />
		<span asp-validation-for="@Model.Data.Description" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="@Model.Data.Purpose" class="control-label">Formål</label>
		<input asp-for="@Model.Data.Purpose" class="form-control" readonly="@(true)" />
		<span asp-validation-for="@Model.Data.Purpose" class="text-danger"></span>
	</div>
	<tbody>
	<div class="form-group">
		<label asp-for="@Model.Data.Step" class="control-label">Trin</label>
			<div asp-for="@Model.Data.Step" id="stepField" class="form-control" readonly="@(true)">@Html.Raw(Model.Data.Hint)</div>
		<span asp-validation-for="@Model.Data.Step" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="@Model.Data.Hint" class="control-label"></label>
			<div asp-for="@Model.Data.Hint" id="hintField" class="form-control" readonly="@(true)">@Html.Raw(Model.Data.Hint)</div>
			<span asp-validation-for="@Model.Data.Hint" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="@Model.Data.CourseId" class="control-label">Kursus</label>
		<select asp-for="@Model.Data.CourseId" asp-items="@Model.CourseList" class="form-control" disabled="@(true)"></select>
	</div>
			<tr>

	        <td>
				@if (!string.IsNullOrEmpty(Model.Data.FileName))
				{
					<a asp-page-handler="DownloadFile" asp-route-id="@Model.Data.Id" class="btn btn-outline-info btn-sm" style="background-color:#fff387" title="Download"><i class="fa fa-download"></i></a>
				}
			</td>
			</tr>
    </tbody>
</form>





